primary = #1a1a1a
secondary = blue
highlight = #F58606

body
  padding 0
  margin 0
  font-family "ff-meta-serif-web-pro", helvetica, serif
  font-size 18px
  line-height 28px

h1
  font-family "ff-meta-serif-web-pro", helvetica, serif
  font-size 48px
  line-height 56px
  font-weight 100
  color primary
  text-align center
  &.main-headline
    margin-top 120px  
    text-transform capitalize
    color white

h2
  margin-top 30px
  font-family "pt-sans-narrow", helvetica
  font-size: 28px
  color primary
  text-align center
  text-transform uppercase
  background secondary
  background url(/images/under.png) no-repeat bottom
  padding-bottom 10px

h3
  margin 20px 0
  line-height 32px
  font-family "pt-sans-narrow", helvetica
  font-size: 20px
  color primary
  text-align center
  text-transform uppercase
  background secondary
  background url(/images/under.png) no-repeat bottom
  padding-bottom 10px

h4
  margin-top 20px
  margin-bottom 5px

p
  margin-top: 30px

a
  img
    border 0

.divider
  background url(/images/under.png) repeat-x center
  width 30px 
  height 30px
  margin-left auto
  margin-right auto

#logo-container
  height 1px

#logo
  background url(/images/logo.png) no-repeat center
  width 200px
  height 95px
  &:hover
    box-shadow none
  span
    display none

.video-placeholder
  background url(/images/video-placeholder.jpg) no-repeat center
  height 200px
  border-top 1px solid primary
  border-bottom 1px solid primary
  background-size 100%

.nav-container
  whitespace nowrap
  box-shadow 0px 2px 13px #999999

// Bootstrap navbar overrides
.navbar
  display table
  margin 0 auto
  .navbar-inner
    text-align center
    min-height 80px
    background none
    border none
    box-shadow none
    .nav
      white-space nowrap
    ul
      padding-top 20px
      text-align center
      li
        font-family "myriad-pro", helvetica
        text-transform uppercase
        padding 0 25px 0 25px
        &:last-child
          padding 0
        a
          color primary
          text-shadow none
          font-size 18px
          font-family "pt-sans-narrow", helvetica, serif
          &:hover
            box-shadow 0px -2px 0px #999999

  .active
    text-decoration underline
    box-shadow 0px -2px 0px #999999
    
// Bootstrap Scaffolding Overrides
.row-fluid
  padding 0
  margin 0

// Bootstrap base css overrides
.btn
  border-radius 3px
  background highlight
  color white
  text-shadow none
  &:hover
    background #EF5A24
    color white
  &.homepage
    padding 15px 60px
    margin-top 50px
    font-size 24px
    font-weight bold
    margin-bottom 30px
    text-shadow 0px 1px #1a1a1a

.btn-navbar
  &.homepage
    background none
    float left
    position absolute
    top 18px
    left 20px

.main-background
  background url("/images/main-background.jpg") no-repeat top
  background-size 100%
  border-top 2px solid black
  border-bottom 2px solid black

.play
  background url("/images/play.png") no-repeat center
  height 125px
  width 200px
  display block
  margin-bottom 60px
  &:hover
    background url("/images/play-hover.png") no-repeat center
    text-decoration none

.promo-text
  font-size 21px
  line-height 28px
  text-align center
  color #eeeeee
  font-style italic

.headshot-container
  vertical-align top
  margin-top 30px
  display inline-block
  width 24%
  .img-polaroid
    width 150px
  .headshot
    width 100px
  p
    margin-top 10px
    font-size 14px
    line-height 21px

.caption
  color #999
  font-size 0.85em
  text-align center